<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="330dp"
    android:orientation="horizontal"
    android:adjustViewBounds="true"
    android:layout_marginLeft="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="330dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/movie_pic"
            android:layout_width="match_parent"
            android:layout_height="400dip"
            android:scaleType="centerCrop"
            android:background="@drawable/border_movie_image">
        </ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/rate_movie"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:textStyle="bold"
                android:textColor="#0f2230"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@drawable/text_circle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:civ_border_width="1dp"
                android:src="@drawable/star"
                app:civ_border_color="@android:color/darker_gray"
                app:civ_circle_background_color="#fff"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/title_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First movie jjjjjgg"
                android:maxLines="2"
                android:scrollHorizontally="true"
                android:textAlignment="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="#ffffff"
                android:ellipsize="end"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_marginBottom="3dp"
                />
            <TextView
                android:id="@+id/date_movie"
                android:layout_below="@+id/title_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="2019-06-28"
                android:textColor="#ffffff"
                android:textSize="17dp"
                android:textStyle="bold"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>




</LinearLayout>